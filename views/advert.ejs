<% include _header %>

<div class="wrapper">

    <div class="box-header">
        <%=subtitle%>
    </div>
    <div class="box-header"></div>
    <%if(result.length>0) {
         result.forEach(function(advert){%>
    <!-- Table Row -->
    <div class="box-row"><img width="300" height="250" src=<%=advert.foto%> ></div>
    <div class="box-row">
        <li><span>Nombre:</span>
            <%=advert.nombre%>
        </li>
        <li><span>Venta:</span>
            <%=advert.venta%>
        </li>
        <li><span>Precio:</span>
            <%=advert.precio%>$<br></li>
        <li><span>Etiquetas:</span> <span id="etiqueta">
                <%=advert.tags%></span></li>
    </div>

    <%})} else {%>
    <div class="sinart">No se encontraron art√≠culos que mostrar.</div>
    <%}%>
</div>


<% include _footer %>